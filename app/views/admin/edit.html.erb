<h1>Edit this question.</h1>

<%= form_for @question, url: "/admin/#{@question.id}" do |f| %>

    <div class="form-group">
        <%= f.label :category_number %>
        <%= f.text_field :category, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :question %>
        <%= f.text_field :text, class: "form-control" %>
    </div>

    <div class="form-group form-group-xlg">
        <%= f.label :answer_1 %>
        <%= f.text_field :answer_1, class: "form-control" %>
    </div>

    <div class="form-group form-group-xlg">
        <%= f.label :answer_2 %>
        <%= f.text_field :answer_2, class: "form-control" %>
    </div>

    <div class="form-group form-group-xlg">
        <%= f.label :answer_3 %>
        <%= f.text_field :answer_3, class: "form-control" %>
    </div>

    <div class="form-group form-group-xlg">
        <%= f.label :answer_4 %>
        <%= f.text_field :answer_4, class: "form-control" %>
    </div>

    <div class="form-group form-group-xlg">
        <%= f.label :number_of_correct_answer %>
        <%= f.text_field :correct_answer, class: "form-control" %>
    </div>

    <div class="btn btn-default">
    <%= f.submit "Save Question" %>
    </div>
    

<% end %>